
@{
    ViewBag.Title = "EditStudent";
}
@model StudentMS.Models.Student
<h2>Edit Student</h2>

<form action="/Student/EditStudent" method="post">
    <input type="hidden" class="form-control" name="Id" value="@Model.Id" />
    <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Name" />
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <input type="date" class="form-control" name="Dob" value="@Model.Dob" placeholder="Date Of Birth" />
    @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
    <input type="number" class="form-control" name="Credit" value="@Model.Credit" placeholder="Credit" />
    @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
    <input type="number" step="0.01" class="form-control" name="CGPA" value="@Model.CGPA" placeholder="CGPA" />
    @Html.ValidationMessageFor(model => model.CGPA, "", new { @class = "text-danger" })
    <input type="number" class="form-control" name="Dept_Id" value="@Model.Dept_id" placeholder="Department" />
    @Html.ValidationMessageFor(model => model.Dept_id, "", new { @class = "text-danger" })
    <input type="submit" class="btn btn-success" />
</form>

